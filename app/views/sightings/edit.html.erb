<h1>Edit <%= @sighting.date %>:</h1>

<% if @sighting.errors.any? %>
  <h3>Please fix the following errors: </h3>
  <ul>
    <% @sighting.errors.full_messages.each do |message|%>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/species/<%= @sighting.species.id %>/sightings/<%= @sighting.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="sighting_date"></label>
  <input id="sighting_date" name="sighting[date]" type="date" value="<%= @sighting.date %>">
    <label for="sighting_latitude"></label>
  <input id="sighting_latitude" name="sighting[latitude]" type="text" value="<%= @sighting.latitude %>">
  <label for="sighting_longitude"></label>
  <input id="sighting_longitude" name="sighting[longitude]" type="text" value="<%= @sighting.longitude %>">
  <label for="sightings_region"></label>
  <select name="sightings[region_id]">
    <option value="1">North</option>
    <option value="2">South</option>
    <option value="3">East</option>
    <option value="4">West</option>
  </select>
  <button>Update Sighting</button>
</form>



